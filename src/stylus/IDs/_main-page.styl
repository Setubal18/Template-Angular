#main-page
	margin-top 20px

	.data-dash
		display flex
		flex-wrap wrap
		align-items center
		justify-content space-between

		&>div
			background escala-cinza-10
			border-radius 10px
			margin 10px

			h2
				text-align center
				font-weight normal
				padding 10px 30px
				border-bottom solid 2px white
				margin-bottom 10px

				strong
					text-transform uppercase

			h3
				font-size 11px
				font-weight normal
				text-transform uppercase
				-webkit-text-stroke-width: 0.5px;
				padding-bottom 5px

				&:before
					content ''
					display inline-table
					width 8px
					height 8px
					background verde
					border-radius 50%
					margin-right 5px
					vertical-align middle

			p
				-webkit-text-stroke-width: 0.5px;
				font-size 22px
				padding-bottom 10px
